    {chapters/images/}
    {characters/images/}
    {concepts/images}
    {images/}
    {items/images}
    {locales/images}
    {miscellany/images}
    {storyline/images}
    {synopsis/images}
}

% Prints a horizontal image, centered on the page, resizing it to the first optional parameter
% \imgHorizontal[7]{myImage}
\newcommand{\imgHorizontal}[2][7]{
    \begin{figure}[h]
        \begin{center}
            \includegraphics[width=#1cm,keepaspectratio]{#2}
        \end{center}
    \end{figure}
}

% Prints a vertical image, centered on the page, resizing it to the first optional parameter
% \imgVertical[7]{myImage}
\newcommand{\imgVertical}[2][7]{
    \begin{figure}[h]
        \begin{center}
            \includegraphics[height=#1cm,keepaspectratio]{#2}
        \end{center}
    \end{figure}
}

% Prints a left side wrapped horizontal image
% \wlImgHorizontal[7]{myImage}
\newcommand{\wlImgHorizontal}[2][7]{
    \begin{wrapfigure}{L}{#1cm}
        \includegraphics[width=#1cm,keepaspectratio]{#2}
    \end{wrapfigure}
}

% Prints a right side wrapped horizontal image
% \wrImgHorizontal[7]{myImage}
\newcommand{\wrImgHorizontal}[2][7]{
    \begin{wrapfigure}{R}{#1cm}
        \includegraphics[width=#1cm,keepaspectratio]{#2}
    \end{wrapfigure}
}

% Prints a left side wrapped vertical image
% \wlImgVertical[7]{myImage}
\newcommand{\wlImgVertical}[2][7]{
    \begin{wrapfigure}{L}{#1cm}
        \includegraphics[height=#1cm,keepaspectratio]{#2}
    \end{wrapfigure}
}

% Prints a right side wrapped vertical image
% \wlImgVertical[7]{myImage}
\newcommand{\wrImgVertical}[2][7]{
    \begin{wrapfigure}{R}{#1cm}
        \includegraphics[height=#1cm,keepaspectratio]{#2}
    \end{wrapfigure}
}
