\newcommand{\imgHorizontal}[1]{
    \begin{figure}[h]
        \begin{center}
            \includegraphics[width=7cm,keepaspectratio]{#1}
        \end{center}
    \end{figure}
}

\newcommand{\imgVertical}[1]{
    \begin{figure}[h]
        \begin{center}
            \includegraphics[height=7cm,keepaspectratio]{#1}
        \end{center}
    \end{figure}
}

\newcommand{\wImgHorizontal}[1]{
    \begin{wrapfigure}{l}{7cm}
        \includegraphics[7cm]{#1}
    \end{wrapfigure}
}
